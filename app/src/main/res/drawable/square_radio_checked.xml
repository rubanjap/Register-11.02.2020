<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:padding="3dp">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:useLevel="false">
            <solid android:color="#2196f3" />
            <corners
                android:radius="2dp"/>
            <size
                android:width="25dp"
                android:height="25dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <corners
                android:radius="2dp"/>
            <solid android:color="#F1F1F1" />
        </shape>
    </item>
    <item
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp">
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <corners
                android:radius="2dp"/>
            <solid android:color="#2196f3" />
        </shape>
    </item>
</layer-list>