<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/itemTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="@string/is_it_idv"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemTextTitle">

        <RadioButton
            android:id="@+id/rdValue_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX=".90"
            android:scaleY=".90"
            android:text="Yes"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="parent" />

        <RadioButton
            android:id="@+id/rdValue_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:scaleX=".90"
            android:scaleY=".90"
            android:text="No"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="parent" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/main"
        android:visibility="gone">
        <TextView
            android:id="@+id/sub_itemTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="@string/is_it_idv"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/sub_rdValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub_itemTextTitle">

            <RadioButton
                android:id="@+id/sub_rdValue_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".90"
                android:scaleY=".90"
                android:text="Yes"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="parent" />

            <RadioButton
                android:id="@+id/sub_rdValue_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:scaleX=".90"
                android:scaleY=".90"
                android:text="No"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="parent" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>