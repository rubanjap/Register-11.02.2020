                    android:id="@+id/rdPCC_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX=".80"
                    android:scaleY=".80"
                    android:text="Yes"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="parent" />

                <RadioButton
                    android:id="@+id/rdPCC_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:scaleX=".80"
                    android:scaleY=".80"
                    android:text="No"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="parent" />
            </RadioGroup>

            <TextView
                android:id="@+id/textSoftware"
