                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textCombProduct">

                <RadioButton
                    android:id="@+id/rdCP_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX=".80"
                    android:scaleY=".80"
                    android:text="Yes"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="parent" />

                <RadioButton
                    android:id="@+id/rdCP_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:scaleX=".80"
                    android:scaleY=".80"
                    android:text="No"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="parent" />
            </RadioGroup>

            <TextView
                android:id="@+id/textLifeSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/is_it_life_supporting_life_sustaining"
