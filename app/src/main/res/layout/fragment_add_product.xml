                app:layout_constraintStart_toStartOf="@id/layout_population"
                app:layout_constraintTop_toBottomOf="@id/layout_population" />

            <LinearLayout
                android:id="@+id/layout_devicetype"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_editbox_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textPDeviceType"
                app:layout_constraintTop_toBottomOf="@+id/textPDeviceType">

                <Spinner
                    android:id="@+id/spinDeviceType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/textPEnv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Usage Environment"
                app:layout_constraintStart_toStartOf="@id/layout_devicetype"
                app:layout_constraintTop_toBottomOf="@id/layout_devicetype" />

            <LinearLayout
                android:id="@+id/layout_environment"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_editbox_bg"
                app:layout_constraintEnd_toEndOf="parent"
