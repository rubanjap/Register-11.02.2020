            <RadioGroup
                android:id="@+id/rdIsElectrical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textIsElectrical">

                <RadioButton
                    android:id="@+id/rdIE_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX=".80"
                    android:scaleY=".80"
                    android:text="Yes"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="parent" />

                <RadioButton
                    android:id="@+id/rdIE_no"
