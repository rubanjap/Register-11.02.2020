<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:paddingBottom="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sub_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/black"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:text="ADD PRODUCT TO PORTFOLIO"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/content_bg"
            app:layout_constraintTop_toBottomOf="@id/sub_header">

            <TextView
                android:id="@+id/textPNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Product Number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtPNumber"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_editbox_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textPNumber"
                app:layout_constraintTop_toBottomOf="@+id/textPNumber" />

            <TextView
                android:id="@+id/textPName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Product Name"
                app:layout_constraintStart_toStartOf="@id/edtPNumber"
                app:layout_constraintTop_toBottomOf="@id/edtPNumber" />

            <EditText
                android:id="@+id/edtPName"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_editbox_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textPName"
                app:layout_constraintTop_toBottomOf="@+id/textPName" />

            <TextView
                android:id="@+id/textPDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Product Description"
                app:layout_constraintStart_toStartOf="@id/edtPName"
                app:layout_constraintTop_toBottomOf="@id/edtPName" />

            <EditText
                android:id="@+id/edtPDesc"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_editbox_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textPDesc"
                app:layout_constraintTop_toBottomOf="@+id/textPDesc" />

            <TextView
                android:id="@+id/textPClassify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Product Classification"
                app:layout_constraintStart_toStartOf="@id/edtPDesc"
                app:layout_constraintTop_toBottomOf="@id/edtPDesc" />

            <LinearLayout
                android:id="@+id/layout_classify"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_editbox_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textPClassify"
                app:layout_constraintTop_toBottomOf="@+id/textPClassify">

                <Spinner
                    android:id="@+id/edtPClassify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


            <TextView
                android:id="@+id/textPIVD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/is_it_idv"
                app:layout_constraintStart_toStartOf="@id/layout_classify"
                app:layout_constraintTop_toBottomOf="@id/layout_classify" />

            <RadioGroup
                android:id="@+id/rdPIVD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textPIVD">

                <RadioButton
                    android:id="@+id/rdPIVD_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX=".80"
                    android:scaleY=".80"
