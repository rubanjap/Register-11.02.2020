                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/textPSterilize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:text="Does the device or a component need sterilizaiton (by the manufacturer or user)?"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/layout_connect"
                app:layout_constraintTop_toBottomOf="@id/layout_connect" />

            <RadioGroup
                android:id="@+id/rdPSterilize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
