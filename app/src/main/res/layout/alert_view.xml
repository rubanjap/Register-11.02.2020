<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
    android:id="@+id/layout_registration_success"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shape_rounded_corner"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="Thank you for signing up with  RegisterME."
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/text_orange"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="To activate your account click the activation link in your email inbox."
        android:textColor="@color/text_orange" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_oval"
        android:text="OK" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/layout_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_rounded_corner"
        android:visibility="gone"
        android:layout_margin="10dp">


            <EditText
                android:id="@+id/edt_emailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_editbox_bg"
                android:hint="Email Address "
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="50dp"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Enter your Email Address \n to receive the reset password link"
                android:textColor="@color/text_orange" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/btn_email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:autoSizeMaxTextSize="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_oval"
                android:text="Email Me"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_fCancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_oval"
                android:text="CANCEL"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_password_link_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_rounded_corner"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:textColor="@color/text_orange"
            android:text="Passwork link sent successfully."
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Please check your inbox for instructions."
            android:textColor="@color/text_orange" />

        <Button
            android:id="@+id/btn_password_ok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_oval"
            android:text="OK" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pass_update_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_rounded_corner"
        android:visibility="gone"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="Password Updated Successfully"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_orange"/>


        <Button
            android:id="@+id/btn_pass_ok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_oval"
            android:text="OK" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_logout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_rounded_corner"
        android:visibility="gone"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="Do you want to Logout ?"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_orange"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp">
        <Button
            android:id="@+id/btn_pass_yes"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:autoSizeMaxTextSize="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_oval"
            android:text="OK"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_pass_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_oval"
            android:text="CANCEL"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"/>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_user_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_rounded_corner"
        android:visibility="gone"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="User profile updated successfully!"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_orange"/>


            <Button
                android:id="@+id/btn_user_ok"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:autoSizeMaxTextSize="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_oval"
                android:text="OK"
                android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_direct_assign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_rounded_corner"
        android:visibility="gone"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="Are you sure you want directly assign it to Master CRRE?"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_orange"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/btn_assign_yes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:autoSizeMaxTextSize="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_oval"
                android:text="OK"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_assign_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_oval"
                android:text="CANCEL"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_cancel_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_rounded_corner"
        android:visibility="gone"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Project Cancellation Reason"
            android:textColor="@color/text_orange" />
        <EditText
            android:id="@+id/edt_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text=""
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_editbox_bg"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="50dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:autoSizeMaxTextSize="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_oval"
                android:text="OK"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_oval"
                android:text="CANCEL"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"/>

        </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:id="@+id/layout_request_region"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_rounded_corner"
        android:visibility="gone"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Region Request"
            android:textColor="@color/text_orange" />
        <EditText
            android:id="@+id/edt_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text=""
            android:hint="Enter Region"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_editbox_bg"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="50dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            android:maxHeight="100dp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:text=""
            android:hint="Enter Description"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_editbox_bg"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="50dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/btn_reg_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:autoSizeMaxTextSize="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_oval"
                android:text="OK"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_reg_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_oval"
                android:text="CANCEL"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_rounded_corner"
        android:visibility="gone"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Add New Comment"
            android:textColor="@color/text_orange" />
        <EditText
            android:id="@+id/edt_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text=""
            android:hint="Topic"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_editbox_bg"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="50dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            android:maxHeight="100dp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:text=""
            android:hint="Enter Comment"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_editbox_bg"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="50dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/btn_submit_comment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:autoSizeMaxTextSize="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_oval"
                android:text="Submit"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_cancel_comment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_oval"
                android:text="CANCEL"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>